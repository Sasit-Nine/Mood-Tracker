<MoodSelect>:
    orientation: "vertical"
    padding: 50
    spacing: 20

    Label:
        text: "What's your mood today?"
        size_hint_y: None
        height: 30

    GridLayout:
        cols: 3
        spacing: 10
        size_hint_y: None
        height: 80

        Button:
            text: "üòä Happy"
            font_size: 20
            on_press: root.emoji_select("Happy")
        Button:
            text: "üò¢ Sad"
            font_size: 20
            on_press: root.emoji_select("Sad")
        Button:
            text: "üò° Angry"
            font_size: 20
            on_press: root.emoji_select("Angry")
        Button:
            text: "üòå Calm"
            font_size: 20
            on_press: root.emoji_select("Calm")
        Button:
            text: "ü§© Excited"
            font_size: 20
            on_press: root.emoji_select("Excited")
        Button:
            text: "üî• Ahh~"
            font_size: 20
            on_press: root.emoji_select("Horny")

        

    Label:
        text: "üìù Describe your feelings:"
        size_hint_y: None
        height: 30

    TextInput:
        id: text_input
        multiline: False
        size_hint_y: None
        height: 100
        hint_text: "Type a short description of your emotions..."

    Label:
        id: song_label
        text: ""
        size_hint_y: None
        height: 30
        color: (0, 1, 0, 1)
