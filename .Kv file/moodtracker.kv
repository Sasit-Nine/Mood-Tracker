#:kivy 2.3.1

<MoodSelect>:
    orientation: "vertical"
    space: 20
    padding: 50

    Label:
        text: "What's your mood today?"

    BoxLayout:
        spacing: 10
        size_hint_y: None 
        height: 80
        
        Button:
            background_normal: 'Images/happy.png'
            on_press: root.emoji_select('happy')
    canvas.before:
        Color:
            rgba: 0.95, 0.95, 0.95, 1
        Rectangle:
            pos: self.pos
            size: self.size

<Button>:
    background_normal: 'Images/happy.png'
    background_down: 'Images/happy.png'
    border: (0, 0, 0, 0)
    size_hint: (None, None)
    size: 64, 64

<TextInput>:
    background_color: 1, 1, 1, 1
    foreground_color: 0.2, 0.2, 0.2, 1
    padding: 10